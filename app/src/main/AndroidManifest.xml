<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.servicesexperimentpoc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".StartedService"
            android:exported="false" />
        <service
            android:name=".IntentServiceClass"
            android:exported="false" />

        <activity android:name=".StartedServiceActivity" />
        <activity android:name=".IntentServiceActivity" />
        <activity android:name=".BoundedServiceActivity"></activity>
    </application>

</manifest>